{
  "name": "zaneevat/delivery-sdk-php",
  "description": "PHP library for REST API of popular transport companies",
  "keywords": [
    "PHP",
    "REST",
    "API"
  ],
  "type": "library",
  "homepage": "https://github.com/zaneevat/delivery-php-sdk",
  "license": "MIT",
  "authors": [
    {
      "name": "Maxim Semkin",
      "homepage": "https://github.com/zaneevat/"
    }
  ],
  "require": {
    "php": ">=8.1",
    "symfony/dotenv":"5.4.* || 6.*",
    "symfony/console": "5.4.* || 6.*"
  },
  "autoload": {
    "psr-4": {
      "Delivery\\SDK\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Delivery\\SDK\\Tests\\": "tests"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "phpstan/phpstan": "^1.9"
  },
  "scripts": {
    "phpunit-run-unit-tests": [
      "phpunit --testsuite unit_tests"
    ],
    "phpstan-analyse": [
      "vendor/bin/phpstan analyse --memory-limit 1G"
    ],
    "php-cs-fixer": [
      "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix src --config=.php-cs-fixer.dist.php",
      "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix tests --config=.php-cs-fixer.dist.php"
    ]
  }
}
